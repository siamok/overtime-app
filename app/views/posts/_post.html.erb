<tr>
  <td>
    <%= post.daily_hours %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td class='hidden-xs'>
    <%= link_to truncate(post.rationale), post %>
  </td>
  <td>
    <%= status_label(post.status) %>
  </td>
  <td>
    <%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons' if policy(post).update? %>
  </td>
  <td>
    <%= button_to 'Delete', post, confirm: 'Are you sure?',  method: :delete, id: "delete_post_#{post.id}_from_index", class: 'btn btn-danger btn-sm' %>
  </td>
</tr>
